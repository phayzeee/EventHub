<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cotton_pink"
    tools:context=".DecoratorRecycler">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/dec_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/muave_pink"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/muave_pink"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="22dp"
                android:fontFamily="@font/segoeb"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="Decorators"
                android:textColor="@color/customer_text"
                />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dec_toolbar"
        android:id="@+id/recycler_decorator"
        />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cotton_pink"
    tools:context=".CustomerInfo">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/customer_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/muave_pink"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/muave_pink"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="22dp"
                android:fontFamily="@font/segoeb"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="Customer Details"
                android:textColor="@color/customer_text"
                />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:text="Name: "
        android:textColor="@color/white"
        android:textSize="22dp"
        android:layout_marginStart="30dp"
        android:layout_centerVertical="true"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/user_edt"
        android:layout_toEndOf="@+id/username"
        android:layout_centerVertical="true"
        android:background="@drawable/edt_bg"
        android:layout_marginEnd="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:text="Phone: "
        android:layout_below="@+id/username"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:layout_marginStart="30dp"
        android:layout_centerVertical="true"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/phone_edt"
        android:layout_toEndOf="@+id/phone"
        android:layout_below="@+id/username"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/edt_bg"
        android:layout_marginEnd="30dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/cus_btn"
        android:layout_below="@+id/phone"
        android:layout_centerVertical="true"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="50dp"
        android:text="SUBMIT"
        android:textSize="22dp"
        />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cotton_pink"
    tools:context=".AddToCart">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/atc_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/muave_pink"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/muave_pink"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="22dp"
                android:fontFamily="@font/segoeb"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="Add To Cart"
                android:textColor="@color/customer_text"
                />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/venue_head"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/atc_toolbar"
        android:text="VENUE"
        android:textSize="24dp"
        android:fontFamily="@font/segoeb"
        android:layout_centerHorizontal="true"
        android:textColor="@color/customer_text"
        />

    <TextView
        android:id="@+id/tv_atc"
        android:layout_below="@+id/venue_head"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:fontFamily="@font/segoeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cat_head"
        android:layout_below="@+id/tv_atc"
        android:layout_marginTop="10dp"
        android:text="CATERERS"
        android:textSize="24dp"
        android:fontFamily="@font/segoeb"
        android:layout_centerHorizontal="true"
        android:textColor="@color/customer_text"
        />

    <TextView
        android:id="@+id/cat_atc"
        android:layout_below="@+id/cat_head"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:fontFamily="@font/segoeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dec_head"
        android:layout_below="@+id/cat_atc"
        android:layout_marginTop="10dp"
        android:text="DECORATORS"
        android:textSize="24dp"
        android:fontFamily="@font/segoeb"
        android:layout_centerHorizontal="true"
        android:textColor="@color/customer_text"
        />

    <TextView
        android:id="@+id/dec_atc"
        android:layout_below="@+id/dec_head"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:fontFamily="@font/segoeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/photo_head"
        android:layout_below="@+id/dec_atc"
        android:layout_marginTop="10dp"
        android:text="PHOTOGRAPHERS"
        android:textSize="24dp"
        android:fontFamily="@font/segoeb"
        android:layout_centerHorizontal="true"
        android:textColor="@color/customer_text"
        />

    <TextView
        android:id="@+id/photo_atc"
        android:layout_below="@+id/photo_head"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:fontFamily="@font/segoeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/atcbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/photo_atc"
        android:layout_centerHorizontal="true"
        android:text="confirm"
        android:textColor="@color/white"
        android:textSize="22dp"/>
</RelativeLayout>